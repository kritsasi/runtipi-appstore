{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "image": "alpine",
      "name": "runtipi-cloudflare-dns-updater",
      "internalPort": 8000,
      "isMain": true,
      "environment": {
        "CF_DNS__DOMAINS_0__NAME": "${CF_DNS__DOMAINS_0__NAME}",
        "CF_DNS__AUTH__SCOPED_TOKEN": "${CF_DNS__AUTH__SCOPED_TOKEN}",
        "CF_DNS__ACCOUNTS__SCOPED_ZONE": "${CF_DNS__ACCOUNTS__SCOPED_ZONE}",
        "CF_DNS__ACCOUNTS__SCOPED_TUNNEL": "${CF_DNS__ACCOUNTS__SCOPED_TUNNEL}",
        "CF_DNS__DOMAINS_0__PROXIED": "${CF_DNS__DOMAINS_0__PROXIED}"
      },
      "volumes": [
        {
          "hostPath": "./shell/runtipi_cloudflare_dns_updater.template",
          "containerPath": "/tmp/runtipi_cloudflare_dns_updater.template"
        },
        {
          "hostPath": "./shell/runtipi_cloudflare_dns_updater.sh",
          "containerPath": "/tmp/runtipi_cloudflare_dns_updater.sh"
        },
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock"
        }
      ]
    }
  ]
}
