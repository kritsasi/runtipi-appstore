{
  "$schema": "../app-info-schema.json",
  "name": "Runtipi Cloudflare DNS Updater"
  "id": "runtipi-cloudflare-dns-updater",
  "available": true,
  "exposable": false,
  "dynamic_config": true,
  "short_desc": "Update DNS records on Cloudflare as Runtipi Platform.",
  "author": "Krit Sasi",
  "port": 8485,
  "categories": ["utilities"],
  "description": "Runtipi Cloudflare DNS Updater is a Docker image that update DNS records on Cloudflare on schedule.",
  "tipi_version": 1,
  "version": "1.1.1",
  "source": "https://github.com/kritsasi/runtipi-cloudflare-dns-updater",
  "form_fields": [
    {
      "type": "fqdn",
      "label": "Root Domain",
      "max": 50,
      "min": 3,
      "required": true,
      "env_variable": "CF_DNS__DOMAINS_0__NAME"
    },
    {
      "type": "password",
      "label": "Token",
      "max": 80,
      "min": 5,
      "required": true,
      "env_variable": "CF_DNS__AUTH__SCOPED_TOKEN"
    },
    {
      "type": "password",
      "label": "Zone",
      "max": 80,
      "min": 5,
      "required": true,
      "env_variable": "CF_DNS__ACCOUNTS__SCOPED_ZONE"
    },
    {
      "type": "password",
      "label": "Tunnel",
      "max": 80,
      "min": 5,
      "required": true,
      "env_variable": "CF_DNS__ACCOUNTS__SCOPED_TUNNEL"
    },
    {
      "type": "boolean",
      "label": "Proxy Enable",
      "required": false,
      "default" : true,
      "env_variable": "CF_DNS__DOMAINS_0__PROXIED"
    }
  ],
  "supported_architectures": ["arm64", "amd64"],
  "created_at": 1691943801422,
  "updated_at": 1724189756000
}
